{
  "name": "TermClick",
  "description": "Turn a free text description into a proper ontology term from TIB terminology service.",
  "version": "1.0.0",
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://use.fontawesome.com/releases/v5.14.0/js/all.js; object-src 'self'",
  "icons": {
    "16": "static/img/tib.png",
    "128": "static/img/tib.png"
  },
  "browser_action": {
    "default_title": "Termclick",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    "index.html",
    "static/js/app.js",
    "static/js/app.js.map",
    "static/js/vendor.js",
    "static/js/vendor.js.map",
    "static/css/app.css",
    "static/css/app.css.map"
  ],
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "activeTab"
  ]
}
